<Window x:Class="HumanEmotion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HumanEmotion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Name="selectedImage" HorizontalAlignment="Left" Height="150" Margin="24,28,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Choose file" Name="btn_ChooseFile" HorizontalAlignment="Left" Margin="195,104,0,0" VerticalAlignment="Top" Height="28" Width="68" Click="btn_ChooseFile_Click"/>
        <Button Content="Run" Name="btn_Run" HorizontalAlignment="Left" Margin="195,150,0,0" VerticalAlignment="Top" Height="28" Width="68" Click="btn_Run_Click"/>
        <RichTextBox Name="richText" Margin="0,202,0,0" FontSize="16px">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
